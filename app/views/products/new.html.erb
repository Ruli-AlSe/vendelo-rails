<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal">
    <div class="fixed z-10 w-full h-full top-0 left-0 bg-black/50" data-action="click->modal#close"></div>
    <div data-modal-target="sidebar" class="fixed top-0 right-0 w-1/2 sm:w-3/6 lg:w-2/6 h-full bg-white z-10 overflow-y-scroll shadow flex flex-col ease-in-out duration-500 p-5 translate-x-full">
      <p class="my-3" data-action="click->modal#close"><%= image_tag 'icons/close.svg', width: 30, height: 30 %></p>
      <h2><%= t('.title') %></h2>
      <%= render 'form' %>
    </div>
  </div>
<% end %>