<div class="bg-white flex justify-between items-center px-2">
  <%= link_to products_path do %>
    <h1 class="text-3xl font-bold text-teal-500 py-2"><%= t('app_name') %></h1>
  <% end %>
  <button class="sm:hidden"><%= image_tag 'icons/menu.svg', width: 35, height: 35 %></button>
  <div class="hidden sm:block">
    <%= render partial: 'shared/menu_items' %>
  </div>
  <!-- Mobile menu -->
  <div class="sm:hidden absolute bg-white top-0 right-0 shadow z-10 h-full flex flex-col min-w-[35%] overflow-y-scroll ease_in_out duration-200 p-3 translate-x-full">
    <%= render partial: 'shared/menu_items' %>
  </div>
</div>